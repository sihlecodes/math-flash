<div class="card">
   <div class="content">
      <%- description _%>
      <%_ if (list.length > 0) { _%>
      <ol class="<%= listStyle _%>">
         <%_ list.forEach(function(item) { _%>
            <li><%- item _%></li>
         <%_ }) _%>
      </ol>
      <%_ } _%>
      <%_ if (footer) { _%>
         <br><%- footer _%>
      <%_ } _%>
   </div>
</div>
